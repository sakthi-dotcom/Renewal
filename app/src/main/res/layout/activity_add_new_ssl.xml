<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Add New SSL"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/ah"
            android:padding="10dp"
            android:elevation="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/userName"
            android:hint="SSL Name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/issuedBy"
            android:hint="Issued By"
            android:inputType="text"
            android:textColor="@color/black"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/issuedTo"
            android:hint="Issued To"
            android:inputType="text"
            android:textColor="@color/black"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/issuedOn"
            android:hint="Issued On (dd/mm/yyyy)"
            android:inputType="date"
            android:textColor="@color/black"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/calendar"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/expires"
            android:hint="Expires On (dd/mm/yyyy)"
            android:inputType="date"
            android:textColor="@color/black"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/calendar"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/black"
            android:text="Certificate type"/>

        <Spinner
            android:id="@+id/certiTypeSpinner"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@drawable/shape_background"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Renewal Enabled?"
            android:textColor="@color/black"
            android:layout_marginHorizontal="25dp"/>


        <EditText
            android:id="@+id/renewal"
            android:inputType="text"
            android:textColor="@color/black"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:textSize="18sp"
            android:hint="Yes or No"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

   <!--     <EditText
            android:id="@+id/renewal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:hint="Yes or No"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_background"
            android:padding="15dp"
            android:spinnerMode="dropdown"
            android:textSize="18sp"
            android:textStyle="bold" /> -->

    </LinearLayout>

    <Button
        android:id="@+id/postBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"/>

</LinearLayout>